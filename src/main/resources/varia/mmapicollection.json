  "item": [
    {
      "name": "Property APIs",
      "item": [
        {
          "name": "Add Property",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "{{baseUrl}}/property",
              "host": ["{{baseUrl}}"],
              "path": ["property"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Sunset Beach Resort\",\n  \"location\": \"Goa\",\n  \"contactNo\": \"9876543210\",\n  \"emailId\": \"sunset@beach.com\"\n}"
            }
          }
        },
        {
          "name": "Get All Properties",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/property/all",
              "host": ["{{baseUrl}}"],
              "path": ["property", "all"]
            }
          }
        },
        {
          "name": "Get Property By ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/property/{{propertyId}}",
              "host": ["{{baseUrl}}"],
              "path": ["property", "{{propertyId}}"]
            }
          }
        },
        {
          "name": "Update Property",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "{{baseUrl}}/property/{{propertyId}}",
              "host": ["{{baseUrl}}"],
              "path": ["property", "{{propertyId}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Sunset Beach Resort Premium\",\n  \"location\": \"North Goa\",\n  \"contactNo\": \"9876500000\",\n  \"emailId\": \"premium@beach.com\"\n}"
            }
          }
        }
      ]
    },
